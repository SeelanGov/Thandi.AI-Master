  "structure": {
    "Mathematics": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Tests (10-15%)", "Assignments/Investigations (10%)", "Mid-year exam", "End-of-year exam"],
        "notes": ["SBA includes formal assessment tasks", "Tests are spread throughout the year"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Tests (10%)", "Assignments/Investigations (10%)", "Preliminary exam (5%)", "Final Exam (75%)"],
        "notes": ["Preliminary exam is crucial for university applications", "Final exam determines NSC result"]
      }
    },
    "Physical_Sciences": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Practicals/Experiments (15%)", "Tests (10%)", "Mid-year exam", "End-of-year exam"],
        "notes": ["Practical component requires lab access", "Experiments must be completed during school time"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Practical Assessment Tasks (PATs, 15%)", "Tests (10%)", "Preliminary exam", "Final Exam"],
        "notes": ["PATs are standardized practical assessments", "Final exam includes both Physics and Chemistry"]
      }
    },
    "Life_Sciences": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Practical tasks (15%)", "Tests (10%)", "Mid-year exam", "End-of-year exam"],
        "notes": ["Practical tasks include experiments and investigations", "Field work may be included"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Practical tasks (15%)", "Tests (10%)", "Preliminary exam", "Final Exam"],
        "notes": ["Practical component essential for medicine applications", "Final exam covers all four Life Sciences topics"]
      }
    },
    "English": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Oral tasks (10%)", "Writing assignments (15%)", "Tests", "Mid-year exam", "End-of-year exam"],
        "notes": ["Oral component includes prepared and unprepared speeches", "Writing includes creative and transactional texts"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Oral tasks (10%)", "Writing assignments (15%)", "Preliminary exam", "Final Exam"],
        "notes": ["Oral assessment completed before final exam", "Final exam includes literature and language components"]
      }
    },
    "Accounting": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Projects/Assignments (10-15%)", "Tests (10%)", "Mid-year exam", "End-of-year exam"],
        "notes": ["Projects involve real business scenarios", "Assignments focus on financial statement preparation"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Projects/Assignments (15%)", "Tests (10%)", "Preliminary exam", "Final Exam"],
        "notes": ["Grade 12 projects are more complex", "Final exam covers all accounting concepts"]
      }
    },
    "Mathematical_Literacy": {
      "grade_10_11": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Assignments/Investigations (10%)", "Control tests (15%)", "Mid-year exam", "End-of-year exam"],
        "notes": ["Assignments focus on real-world applications", "Control tests assess problem-solving skills"]
      },
      "grade_12": {
        "sba_weight": 25,
        "final_exam": 75,
        "components": ["Assignments/Investigations (10%)", "Control tests (10%)", "Preliminary exam (5%)", "Final Exam"],
        "notes": ["Final year focuses on practical mathematics", "Assignments often involve data analysis"]
      }
    }
  },
  "general_notes": [
    "All CAPS subjects follow 25% SBA + 75% Final Exam weighting",
    "SBA tasks are spread throughout the year for continuous assessment",
    "Preliminary exams in Grade 12 are used for university applications",
    "Final exams are externally set and moderated by DBE"
  ],
